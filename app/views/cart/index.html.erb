<main  class="container">
    <div class="d-flex"> 
        <div class="d-flex justify-content-between flex-column flex-grow-1 mx-3">
            <div class="d-inline-flex justify-content-between border-bottom border-3"> 
                <div class="fw-bold d-flex">
                    <p class="fw-bolder pe-2">P</p>   
                    <p class="fw-normal pe-2">roducto </p>
                </div>
                <div class="fw-bold d-flex">
                    <p class="fw-bolder pe-2">P</p>   
                    <p class="fw-normal pe-2">recio </p>
                </div>
                <div class="fw-bold d-flex">
                    <p class="fw-bolder pe-2">C</p>   
                    <p class="fw-normal pe-2">antidad </p>
                </div>
                <div class="fw-bold d-flex">
                    <p class="fw-bolder pe-2">S</p>   
