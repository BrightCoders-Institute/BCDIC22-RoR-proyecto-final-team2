<section> 
  <% 
    icon_1 = @results_algorithm[0][1]
    icon_2 = @results_algorithm[1][1]
    icon_3 = @results_algorithm[2][1]
    icon_4 = @results_algorithm[3][1]
  %>
  <div class="d-inline-flex flex-column">
    <div class="border-blue rounded-3 d-inline-flex flex-column align-items-center my-5 px-3 pt-3">
      <div class="img-limitator">
        <%= image_tag "#{ @compare_info[0] }", alt: "Telefono" %>
      </div>
      <div class="fw-bold pt-2">
        <p><%= @compare_info[1] %></p>
      </div>
      <div class="fw-bold pt-2">
        <p> $<%= @compare_info[2] %> <i class="fa-solid fa-<%= icon_1 %>"></i></p>
      </div>
    </div>
    <div class="border-blue mb-5 rounded-3 d-inline-flex flex-column"> 
      <div class="bg-blue z-2 border-blue rounded-top px-2">
        <p class="text-light fw-bold text-center mt-2">Caracteristicas principales</p>
      </div> 
      <div class="mt-3 mx-3">
        <div class="d-flex m-1"><i class="fa-solid fa-mobile-screen-button p-1"></i> <p>Pantalla <%= @compare_info[3] %> pulgadas <i class="fa-solid fa-<%= icon_2 %>"></i></p></div>
        <div class="d-flex m-1"><i class="fa-solid fa-memory p-1"></i> <p>Memoria <%= @compare_info[4] %> GB <i class="fa-solid fa-<%= icon_3 %>"></i></p></div>
        <div class="d-flex m-1"><i class="fa-solid fa-camera p-1"></i> <p>Camara <%= @compare_info[5] %> mp <i class="fa-solid fa-<%= icon_4 %>"></i></p></div>
        <div class="d-flex m-1"><i class="fa-solid fa-microchip p-1"></i> <p>Procesador <%= @compare_info[6] %></p></div>
        <div class="d-flex m-1"><i class="fa-solid fa-o p-1"></i> <p>Sistema Operativo <%= @compare_info[7] %></p></div>
      </div>
    </div>
    <div class="px-5 pb-5 d-flex justify-content-center">
      <%= link_to "Comprar", phone_path(id: @compare_info[8]), class: "btn button-blue border rounded-3" %>
    </div>
  </div>
</section>
