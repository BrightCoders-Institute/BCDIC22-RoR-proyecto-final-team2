<% brands = ["Apple", "Samsung", "Xiaomi", "Oppo", "Motorola", "Google", "Huawei"] %>
<% for j in 0..6 %> 
  <section>
    <h3 class="brand-1 mb-4 p-3"> <%= brands[j] %>  </h3>
    <% for i in 0..3 %> 
      <div class="div-mejorescelulares d-inline-flex flex-column mx-5 mb-5">
        <div  class="p-3 border border-dark rounded-4 d-flex justify-content-center img-limitator">
          <%= image_tag "#{eval('@phone_brand' + (j+1).to_s)[i][2]}", alt: "Telefono" %> 
        </div>
        <div class="container">
          <div class="row">
            <div class="col">
              <p class="fw-bolder"> <%= eval('@phone_brand' + (j+1).to_s)[i][0] %> </p>
              <p class="fw-bolder"> $<%=eval('@phone_brand' + (j+1).to_s)[i][1] %></p>
              <button type="button" class="mt-0 btn btn-dark border border-3 rounded-4"> Comprar</button>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </section>
<%end%>
