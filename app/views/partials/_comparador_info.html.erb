<section> 
  <% 
  icon_1, icon_2, icon_3, icon_4 = 'minus', 'minus', 'minus', 'minus'
  if @results_algorithm != nil 
    icon_1 = @results_algorithm[0][0]
    icon_2 = @results_algorithm[1][0]
    icon_3 = @results_algorithm[2][0]
    icon_4 = @results_algorithm[3][0]
  end 
  %>
  <div class="d-inline-flex flex-column">
    <div class="border-blue rounded-3 d-inline-flex flex-column align-items-center my-5 px-3 pt-3">
      <div class="img-limitator">
        <%= image_tag "#{@img}", alt: "Telefono" %>
      </div>
      <div class="fw-bold pt-2">
        <p><%= @nombre %></p>
      </div>
      <div class="fw-bold pt-2">
        <p> $<%= @precio %> <i class="fa-solid fa-<%= icon_1 %>"></i></p> 
      </div>
    </div>
    <div class="border-blue mb-5 rounded-3 d-inline-flex flex-column"> 
      <div class="bg-blue z-2 border-blue rounded-top px-2">
        <p class="text-light fw-bold text-center mt-2">Caracteristicas principales</p>
      </div> 
      <div class="mt-3 mx-3">
        <div class="d-flex m-1"><i class="fa-solid fa-mobile-screen-button p-1"></i> <p>Pantalla <%= @pantalla %> pulgadas <i class="fa-solid fa-<%= icon_2 %>"></i></p> </div>
        <div class="d-flex m-1"><i class="fa-solid fa-memory p-1"></i> <p>Memoria <%= @memoria %> GB <i class="fa-solid fa-<%= icon_3 %>"></i></p> </div>
        <div class="d-flex m-1"><i class="fa-solid fa-camera p-1"></i> <p>Camara <%= @camara %> mp <i class="fa-solid fa-<%= icon_4 %>"></i></p> </div>
        <div class="d-flex m-1"><i class="fa-solid fa-microchip p-1"></i> <p>Procesador <%= @procesador %></p></i></div>
        <div class="d-flex m-1"><i class="fa-solid fa-o p-1"></i> <p>Sistema Operativo <%= @so %></p></div>
      </div>
    </div>
    <div class="px-5 pb-5 d-flex justify-content-center">
      <button class="btn button-blue border rounded-3">Comprar</button>
    </div>
  </div>

</section>
