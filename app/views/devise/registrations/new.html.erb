<div class="sign-up-body container">
  <aside class="sidebar">
    <%= image_tag "sign-up.jpg", alt: "Sign up", class: "img-fluid sign-up-img"%>
  </aside>

  <main class="sign-up-form">
    <h2>Registrate</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Nombre", class: "sign-form-field" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo", class: "sign-form-field" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña (al menos 6 caracteres)", class: "sign-form-field" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirma tu contraseña", class: "sign-form-field" %>
      </div>

      <div class="form-group">
        <select name="permisos" , class="sign-form-field">
          <option value="">Selecciona una opción</option>
          <option value="1">Comprador</option>
          <option value="2">Vendedor</option>
        </select>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class: "btn btn-primary sign-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </main>

</div>