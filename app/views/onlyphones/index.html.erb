<main class="main-page">
  <div class="border-top border-bottom">
    <div class="container">
      <div class="row p-5">
        <div class="col d-flex flex-column justify-content-center">
          <h2 class="fw-bolder"> <%= @random_phone[0] %></h2>
          <br> <br>
          <div class="buutons-group d-flex">
            <button type="button" class="btn button-blue border rounded-3 me-3"> Comprar ahora </button>
            <%= button_to "Ver otro telefono", request.original_url, method: :get, class: "btn btn-outline-dark border border-3 rounded-3" %>
          </div>
        </div>

        <div class="col">
          <div class="container">
            <div class="d-flex">
                <%= @random_phone[2] ? ( image_tag "#{@random_phone[2]}", alt: "Telefono", class: "max-width-phones" ) : ( image_tag "https://picsum.photos/200", alt: "Telefono", class: "w-50") %>
                <div class="price-figure text-white text-center align-self-end"> <p class="p-3 text-center"> $ <%= @random_phone[1] %></p></div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>

  <div class="marcas d-flex justify-content-evenly align-items-center container p-2">
    <a href="#"> <%= image_tag "apple-logo.png", alt: "Apple", class: "p-5"%></a>
    <a href="#"> <%= image_tag "samsung-logo.png", alt: "Samsung", class: "p-5"%></a>
    <a href="#"> <%= image_tag "xiaomi-logo.png", alt: "Xiaomi", class: "p-5"%></a>
    <a href="#"> <%= image_tag "motorola-logo.png", alt: "Motorola", class: "p-5"%></a>
  </div>

  <div class="phones ps-5">
    <div class="fs-2 fw-bold d-flex">
      <p class="fw-bolder pe-2">L</p>   
      <p class="fw-normal pe-2">os mejores </p>
      <p class="fw-bolder pe-2">C</p>
      <p class="fw-normal">elulares</p>
    </div>
    <div class="p-5"> <%= render 'partials/mejorescelulares' %> </div>
  </div>

  <div class="ofertas p-2">
    <div class="card">
      <%= image_tag "ofertas-background.png", alt: "Ofertas", class: ""%>
      <div class="card-img-overlay m-4 d-flex align-items-center justify-content-center flex-column">
        <div class="card-title fs-1 ofertas-color fw-bold d-flex">
          <p class="fw-bolder pe-2">O</p>   
          <p class="fw-normal pe-2">fertas</p>
          <p class="fw-bolder pe-2">en C</p>
          <p class="fw-normal">elulares</p>
        </div>
        <p class="card-text fs-5 text-light fw-light">Lo mejor y con descuentos</p>
        <button class="btn btn-danger ofertas-button">Ver Ofertas</button>
      </div>
    </div>
  </div>
</main>
